# Set the base image to PHP 8.1 with Apache
FROM php:8.1-apache

# Install necessary dependencies (including curl)
RUN apt-get update && apt-get install -y \
    curl \
    php-cli \
    libpng-dev \
    libjpeg-dev \
    libfreetype6-dev \
    libzip-dev \
    libxml2-dev \
    libssl-dev \
    git \
    unzip \
    && docker-php-ext-configure gd --with-freetype --with-jpeg \
    && docker-php-ext-install gd zip pdo pdo_mysql xml

# Install Composer manually
RUN curl -sS https://getcomposer.org/installer | php -- --install-dir=/usr/local/bin --filename=composer

# Debug step to ensure Composer is installed
RUN ls -l /usr/local/bin/  # List all files to check if composer exists
RUN which composer         # Check if Composer is available in the system path
RUN composer --version     # Verify the installed version of Composer

# Enable Apache mod_rewrite
RUN a2enmod rewrite

# Set the working directory inside the container
WORKDIR /var/www/html

# Copy the Laravel application into the container
COPY . .

# Set file permissions (adjust the user depending on your setup)
RUN chown -R www-data:www-data /var/www/html

# Install PHP dependencies with Composer
RUN composer install --no-dev --optimize-autoloader --verbose

# Install NPM dependencies and build assets
RUN npm install
RUN npm run build

# Run necessary Laravel commands
RUN php artisan optimize:clear
RUN php artisan migrate --force
RUN php artisan db:seed --force
RUN php artisan storage:link

# Expose port 80
EXPOSE 80

# Start Apache server
CMD ["apache2-foreground"]
